<h1><%= @cocktail.name %></h1>
<% if @cocktail.doses.present? %>
  <% @cocktail.doses.each do |dose| %>
    <h1><%= dose.ingredient.name %>: <%= dose.description %> </h1>
     <%= link_to dose_path(dose), method: :delete, data: { confirm: "Sure or what?"} do %>
                      <h2>☠️</h2>
      <% end %>
    <hr>
  <% end %>
    <%= link_to "Add some more ingredients!",  new_cocktail_dose_path(@cocktail) %>
<% else %>
  <h2>No ingredients listed, add some!</h2>
  <%= link_to "Add some ingredients!",  new_cocktail_dose_path(@cocktail) %>
<% end %>
<%= link_to "Return to Cocktails list", cocktails_path %>

